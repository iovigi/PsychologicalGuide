
@{
    ViewBag.Title = "Създаване на статия";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-3"></div>
        <div class="col-xs-6">
            <h2>Създаване на статия</h2>
            @using (Html.BeginForm("Add", "EditorArticle", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <input class="form-control" name="Title" placeholder="Заглавие" />
                <div class="form-group">
                    <textarea class="form-control ckeditor" name="content" rows="6">Текст</textarea>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-default" value="Създаване" />
                </div>
            }
        </div>
        <div class="col-xs-3"></div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/Edit/js")
}

