@model PsychologicalGuide.Web.Areas.Administrator.Models.Article.EditArticle

@{
    ViewBag.Title = "Редактиране на статия";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-3"></div>
        <div class="col-xs-6">
            <h2>Създаване на статия</h2>
            @using (Html.BeginForm("Edit", "ArticleAdminEdit", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(x=> x.Id)
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", placeholder = "Заглавие" } })
                @Html.DropDownListFor(m => m.CategoryId, Model.Categories, new { id = "categoriesList" })
                <div class="form-group">
                    @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control ckeditor", rows = "6" } })
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-default" value="Редактиране" />
                </div>
            }
        </div>
        <div class="col-xs-3"></div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/Edit/js")
}
