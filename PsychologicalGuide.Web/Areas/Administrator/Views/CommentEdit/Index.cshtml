@model IEnumerable<PsychologicalGuide.Web.Areas.Administrator.Models.Comment.CommentListItemViewModel>
@{
    ViewBag.Title = "Comments Edit";
}

<div class="container">
    <div class="row">
        <div class="col-xs-offset-6 col-xs-6">
            <div>
                <h2>Коментари</h2>
            </div>
            <table class="table table-striped">
                <tr>
                    <th>
                        Заглавие на статия
                    </th>
                    <th>
                        Потребител
                    </th>
                    <th>
                        Съдържание
                    </th>
                    <th>
                        Редактиране
                    </th>
                    <th>
                        Изтриване
                    </th>
                </tr>
                @foreach (var comment in Model)
                {
                    <tr>
                        <td>
                            @comment.ArticleTitle
                        </td>
                        <td>
                            @comment.UserEmail
                        </td>
                        <td>
                            @comment.Content
                        </td>
                        <td>
                            @Html.ActionLink("Редактиране", "Edit", "CommentEdit", new { Area = "Administrator", id = comment.Id }, new { })
                        </td>
                        <td>
                            @Html.ActionLink("Изтриване", "Delete", "CommentEdit", new { Area = "Administrator", id = comment.Id }, new { })
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
